<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
      android:elevation="10dp"
    app:cardBackgroundColor="#cc6390"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
          <ImageView
              android:id="@+id/postImageId"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:adjustViewBounds="true"
              android:cropToPadding="true"
              android:scaleType="centerCrop"
              android:background="@drawable/ic_launcher_background"
               />

        <TextView
            android:id="@+id/postTitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            app:fontFamily="@font/black_ops_one" />

        <TextView
            android:id="@+id/postDiscriptionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discription"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/arizonia" />

        <TextView
            android:id="@+id/postDateId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Post Date"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="15sp"
            app:fontFamily="@font/aclonica" />
    </LinearLayout>


</android.support.v7.widget.CardView>

